{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":{"fontSize":20, "text":"Black Scatter Particle Bubble Chart"},

    "data": {
      "url": "https://raw.githubusercontent.com/ying-tsai-wang/3179/refs/heads/main/bsp_bubble.csv"
    },
    "width":400,
    "height": 330,
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "distance_to_cbd",
        "type": "quantitative",
        "title": "Distance to CBD",
        "axis": {"grid": false}
      },
      "y": {
        "field": "population_density",
        "type": "quantitative",
        "title": "Population Density",
        "axis": {"grid": false}
      },
      "size": {
        "field": "average_value",
        "type": "quantitative",
        "scale": {
          "domain": [15,20],
          "range": [100,600,1000] 
        },
        "title": "Average 1/MM"
      },
      "color": {
        "field": "location_name",
        "type": "nominal",
        "title": "Measurement"
      },
      "tooltip": [
        {"field": "location_name", "type": "nominal", "title":"Location"},
        {"field": "distance_to_cbd", "type": "quantitative", "title": "Distance to CBD"},
        {"field": "population_density", "type": "quantitative", "title":"Population Density"},
        {"field": "average_value", "type": "quantitative", "title":"Average Measurement Value"}
      ]
    }
  }