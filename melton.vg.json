{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "fontSize": 20, "text": "Melton All Measurement"},

    "data": {
      "url": "https://raw.githubusercontent.com/ying-tsai-wang/3179/refs/heads/main/melton_measurements.csv"
    },
    "vconcat": [
      {
        "width": 1400,
        "height": 240,
        "mark": "line",
        "encoding": {
          "x": {
            "field": "datetime_local",
            "type": "temporal",
            "scale": {"domain": {"param": "brush"}},
            "axis": {"title": "", "tickCount": 10, "grid": false}
          },
          "y": {"field": "value", "type": "quantitative", "axis": {"grid": false},"scale": {"domain": [0,60]}},
          "color":{"field": "parameter_name", "type": "nominal", "title": "Measurements"}
        }
      },
      {
        "width": 1400,
        "height": 60,
        "mark": "line",
        "params": [
          {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
        ],
        "encoding": {
          "x": {"field": "datetime_local", "type": "temporal", "axis": {"tickCount": 10,"grid": false},"title":"Time"},
          "y": {
            "field": "value",
            "type": "quantitative",
            "axis": {"tickCount": 3, "grid": false}
          },
          "color":{"field": "parameter_name", "type": "nominal"}
        }
      }
    ]
  }
